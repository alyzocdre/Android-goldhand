<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <com.master.glideimageview.GlideImageView
            android:id="@+id/buy_list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/book" />

        <TextView
            android:id="@+id/buy_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buy_list_item_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:padding="12dp"
            android:text="Text"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/buy_list_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buy_list_item_name"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:text="Text"
            android:textSize="20sp" />
    </RelativeLayout>
